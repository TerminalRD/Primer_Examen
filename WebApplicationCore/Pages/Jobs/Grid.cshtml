@page
@model WebApplicationCore.Pages.Jobs.GridModel
@{
}

<div class="container">
    <div class="card">
        <div class="card-header">
            Puestos
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <table id="GridView" class="table table-bordered table-striped table-hover">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Puesto</th>
                        <th>Salario</th>
                        <th>Estado</th>
                        <th>Acción</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.GridList)
                    {
                        <tr>
                            <td>@item.Id_puesto</td>
                            <td>@item.Nombre</td>
                            <td>@item.Salario</td>
                            <td>@(item.Estado ? "Activo":"Inactivo")</td>
                            <td>
                                <button type="button" class="btn btn-outline-secondary">
                                    <i class='bx bxs-edit'></i>
                                </button>
                                <button type="button" class="btn btn-outline-secondary">
                                    <i class='bx bx-trash'></i></button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@*Hacemos el llamado de todos los scripts: incluyendo los typescripts *@
@section Scripts
{
        <script defer src="~/App/Jobs/Grid.js"></script>
}

